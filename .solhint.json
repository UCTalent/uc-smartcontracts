{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", "^0.8.9"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "reason-string": ["off", { "maxLength": 255 }],
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "no-empty-blocks": "off",
    "not-rely-on-time": "off"
  }
}
